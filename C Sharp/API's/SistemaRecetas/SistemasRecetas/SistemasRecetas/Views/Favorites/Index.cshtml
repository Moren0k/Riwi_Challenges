@model List<SistemasRecetas.Models.Favorite>

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="m-0">Favorites</h3>
        <a class="btn btn-primary" asp-action="Create">Agregar manualmente</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var f in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrWhiteSpace(f.Thumb))
                        {
                            <img src="@f.Thumb" class="card-img-top" alt="@f.Name" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@f.Name</h5>
                            @if (!string.IsNullOrWhiteSpace(f.IdMeal))
                            {
                                <div class="text-muted small mb-2">IdMeal: @f.IdMeal</div>
                            }

                            @if (!string.IsNullOrWhiteSpace(f.IngredientsText))
                            {
                                <div class="small text-muted mb-2">
                                    <strong>Ingredientes:</strong>
                                    @{
                                        var items = f.IngredientsText
                                            .Split('\n', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries)
                                            .ToList();
                                    }
                                    @string.Join(", ", items.Take(5))
                                    @if (items.Count > 5) { <span>…</span> }
                                </div>
                            }

                            <div class="mt-auto d-flex gap-2">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@f.Id">Editar</a>

                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@f.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('¿Eliminar este favorito?');">
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No tienes favoritos aún.</p>
    }
</div>
