@model List<SistemasRecetas.Models.Recipe>

<div class="container mt-3">
    <!-- Formulario de búsqueda -->
    <form asp-action="Index" asp-controller="Recipe" method="get" class="mb-4">
        <h3 class="text-center mb-3">Buscar Recetas</h3>

        <div class="input-group">
            <input type="text" class="form-control text-center" name="name"
                   placeholder="pizza, pasta, chicken" />
            <button type="submit" class="btn btn-success">Buscar</button>
        </div>

        <div class="form-text text-center mt-1">
            Escribe varios nombres separados por coma (ej: <em>pizza, pasta, chicken</em>)
        </div>
    </form>

    <!-- Resultados -->
    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var r in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrWhiteSpace(r.strMealThumb))
                        {
                            <img src="@r.strMealThumb" class="card-img-top" alt="@r.strMeal" />
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">@r.strMeal</h5>

                            <h6 class="mt-2 mb-1">Ingredientes</h6>
                            <ul class="mb-3">
                                @foreach (var ing in r.GetIngredientsLines())
                                {
                                    <li>@ing</li>
                                }
                            </ul>

                            <h6 class="mt-2 mb-1">Instrucciones</h6>
                            <p class="card-text" style="white-space: pre-line;">
                                @r.strInstructions
                            </p>

                            <!-- Botón dinámico -->
                            @if (ViewBag.FavIds != null && ((List<string?>)ViewBag.FavIds).Contains(r.idMeal))
                            {
                                <button class="btn btn-sm btn-secondary w-100 mt-2" disabled>
                                    Ya agregada
                                </button>
                            }
                            else
                            {
                                <form asp-controller="Favorites" asp-action="Add" method="post" class="mt-auto">
                                    <input type="hidden" name="idMeal" value="@r.idMeal" />
                                    <input type="hidden" name="name" value="@r.strMeal" />
                                    <input type="hidden" name="thumb" value="@r.strMealThumb" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary w-100 mt-2">
                                        Agregar a favoritos
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted text-center">No se encontraron recetas.</p>
    }
</div>
