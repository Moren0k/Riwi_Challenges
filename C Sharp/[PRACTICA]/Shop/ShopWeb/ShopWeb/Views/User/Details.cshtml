@model ShopWeb.Models.User

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Detalles del Usuario</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@($"{Model.FirstName} {Model.LastName}")</dd>

                <dt class="col-sm-3">Correo</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Rol</dt>
                <dd class="col-sm-9">@Model.Role</dd>

                @if (Model is ShopWeb.Models.Customer customer)
                {
                    <dt class="col-sm-3">Dirección</dt>
                    <dd class="col-sm-9">@customer.Address</dd>

                    <dt class="col-sm-3">Teléfono</dt>
                    <dd class="col-sm-9">@customer.Phone</dd>
                }
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('¿Seguro que deseas eliminar este usuario?');">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </form>
        </div>
    </div>
</div>