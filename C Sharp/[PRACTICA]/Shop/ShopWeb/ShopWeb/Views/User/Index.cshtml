@model ShopWeb.Models.UserViewModel

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Gestión de Usuarios</h2>

    <!-- Formulario Crear Usuario -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Crear nuevo usuario</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="NewUser.FirstName" class="form-label">Nombre</label>
                        <input asp-for="NewUser.FirstName" class="form-control" />
                        <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewUser.LastName" class="form-label">Apellido</label>
                        <input asp-for="NewUser.LastName" class="form-control" />
                        <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="NewUser.Email" class="form-label">Correo</label>
                        <input asp-for="NewUser.Email" class="form-control" />
                        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewUser.Password" class="form-label">Contraseña</label>
                        <input asp-for="NewUser.Password" type="password" class="form-control" />
                        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NewUser.Role" class="form-label">Rol</label>
                    <select asp-for="NewUser.Role" class="form-select">
                        <option value="">Seleccionar rol...</option>
                        <option value="Admin">Admin</option>
                        <option value="Seller">Seller</option>
                        <option value="Customer">Customer</option>
                    </select>
                    <span asp-validation-for="NewUser.Role" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Crear Usuario
                </button>
            </form>
        </div>
    </div>

    <!-- Tabla de Usuarios -->
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Lista de Usuarios</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Users.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No hay usuarios registrados</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@($"{user.FirstName} {user.LastName}")</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-info text-dark">@user.Role</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Ver
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('¿Seguro que deseas eliminar este usuario?');">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}